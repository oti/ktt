{
  "private": true,
  "name": "ktt",
  "version": "1.3.0",
  "description": "「今朝はTKGを食べました」を一覧できるウェブサイト",
  "author": "oti",
  "license": "CC BY-NC 4.0",
  "scripts": {
    "build": "parcel build src/*.pug --no-optimize --no-source-maps --public-url ./",
    "lint-css": "stylelint dist/*.css",
    "lint-html": "markuplint dist/*.html --ruleset ./markuplintrc",
    "prettier": "prettier --write .",
    "start": "parcel src/*.pug --open",
    "test": "npm run lint-css & npm run lint-html & npm run validate-html",
    "validate-html": "html-validator --file=dist/index.html --verbose",
    "prepare": "husky install",
    "update-data": "node generator/data.js",
    "update-photo": "node generator/photo.js"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.13.3",
    "autoprefixer": "^9.8.6",
    "commitizen": "^4.2.3",
    "cz-customizable": "^6.3.0",
    "husky": "^4.3.8",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "pug": "^3.0.1",
    "sharp": "^0.27.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  }
}
