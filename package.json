{
  "private": true,
  "name": "ktt",
  "version": "1.3.0",
  "description": "「今朝はTKGを食べました」を一覧できるウェブサイト",
  "author": "oti",
  "license": "CC BY-NC 4.0",
  "scripts": {
    "build": "parcel build src/*.pug --no-optimize --no-source-maps --public-url ./",
    "lint-css": "stylelint dist/*.css",
    "lint-html": "markuplint dist/*.html --ruleset ./markuplintrc",
    "prettier": "prettier --write .",
    "start": "parcel src/index.pug --open",
    "test": "npm run lint-css & npm run lint-html & npm run validate-html",
    "validate-html": "html-validator --file=dist/index.html --verbose",
    "prepare": "husky install",
    "update-data": "node generator/data.js",
    "update-photo": "node generator/photo.js"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.2.1",
    "@prettier/plugin-pug": "^1.19.2",
    "autoprefixer": "^10.4.2",
    "html-validator-cli": "^7.0.1",
    "husky": "^7.0.4",
    "markuplint": "^1.11.4",
    "parcel": "^2.2.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "pug": "^3.0.2",
    "sass": "^1.49.7",
    "sharp": "^0.30.1",
    "stylelint": "^14.3.0",
    "stylelint-config-recommended": "^6.0.0"
  }
}
